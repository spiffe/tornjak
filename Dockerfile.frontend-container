FROM node:18
WORKDIR /usr/src/app
COPY tornjak-frontend ./
RUN npm install

# set env variables
ENV REACT_APP_API_SERVER_URI $REACT_APP_API_SERVER_URI
ENV REACT_APP_AUTH_SERVER_URI $REACT_APP_AUTH_SERVER_URI
ARG NODE_OPTIONS=--openssl-legacy-provider
ENV NODE_OPTIONS $NODE_OPTIONS

EXPOSE 3000

# start app
CMD ["npm", "start"]
